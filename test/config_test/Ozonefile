  - name: prepend-123
    for: SERVICE:services
    include:
      - name: docker-tag-latest
    with_vars:
      "{{SERVICE}}_FULL_TAG": "{{DOCKER_FULL_TAG}}"

  - name: prepend-123-all-services
    include:
      - name: prepend-123